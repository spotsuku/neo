{
  "name": "neo-portal",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "html-server": "node html-server.js",
    "api-server": "node api-server.js",
    "db:migrate:local": "wrangler d1 migrations apply webapp-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply webapp-production --remote",
    "db:seed:local": "wrangler d1 execute webapp-production --local --file=./seed.sql",
    "db:seed:prod": "wrangler d1 execute webapp-production --remote --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed:local",
    "db:console:local": "wrangler d1 execute webapp-production --local",
    "db:console:prod": "wrangler d1 execute webapp-production --remote",
    "clean": "rm -rf .wrangler",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || fuser -k 7000/tcp 2>/dev/null || fuser -k 7001/tcp 2>/dev/null || true",
    "git:commit": "git add . && git commit -m",
    "git:push": "git push origin main"
  },
  "dependencies": {
    "rate-limiter-flexible": "^7.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "wrangler": "^3.93.0"
  }
}