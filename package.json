{
  "name": "neo-digital-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3000 --hostname 0.0.0.0",
    "build": "next build",
    "start": "next start --port 3000 --hostname 0.0.0.0", 
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "db:generate": "wrangler d1 migrations apply neo-platform-db --local",
    "db:migrate": "wrangler d1 migrations apply neo-platform-db",
    "db:seed": "wrangler d1 execute neo-platform-db --local --file=./db/seed.sql",
    "deploy": "npm run build && wrangler pages deploy out",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true"
  },
  "dependencies": {
    "next": "^15.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "lucide-react": "^0.468.0",
    "@radix-ui/react-slot": "^1.1.0",
    "zod": "^3.23.8",
    "jose": "^5.9.6"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0", 
    "@types/react-dom": "^19.0.0",
    "typescript": "^5.6.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.2",
    "wrangler": "^3.93.0"
  }
}