{
  "name": "neo-portal",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 5000 --hostname 0.0.0.0",
    "dev:api": "next dev --port 3000 --hostname 0.0.0.0",
    "build": "next build",
    "build:prod": "cp next.config.prod.js next.config.js && npm run build",
    "export": "next export -o out",
    "build:export": "npm run build && npm run export",
    "start": "next start --port 3000 --hostname 0.0.0.0",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:bundle": "npm run analyze && node scripts/bundle-analyzer.js",
    "analyze:deps": "node scripts/dependency-analyzer.js",
    "analyze:full": "npm run analyze:bundle && npm run analyze:deps",
    "optimize:deps": "npm run analyze:deps && npm prune",
    "validate:schemas": "tsx scripts/validate-schemas.ts",
    "validate:all": "npm run validate:schemas && npm run test:ci",
    "db:migrate:local": "wrangler d1 migrations apply webapp-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply webapp-production --remote",
    "db:seed:local": "wrangler d1 execute webapp-production --local --file=./seed.sql",
    "db:seed:prod": "wrangler d1 execute webapp-production --remote --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed:local",
    "db:console:local": "wrangler d1 execute webapp-production --local",
    "db:console:prod": "wrangler d1 execute webapp-production --remote",
    "deploy:staging": "npm run build && next export -o out && wrangler pages deploy ./out --project-name neo-portal-staging",
    "deploy:prod": "npm run build && next export -o out && wrangler pages deploy ./out --project-name neo-portal",
    "pages:create": "wrangler pages project create neo-portal --production-branch main",
    "secrets:set": "echo 'Set secrets manually: wrangler pages secret put JWT_SECRET --project-name neo-portal'",
    "clean": "rm -rf .next out .wrangler",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "postinstall": "husky install || true",
    "git:commit": "git add . && git commit -m",
    "git:push": "git push origin main"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.8",
    "@node-rs/argon2": "^2.0.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@types/qrcode": "^1.5.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-react": "^5.18.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jose": "^5.9.6",
    "lucide-react": "^0.468.0",
    "next": "^15.5.2",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^7.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-react": "^5.28.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.1",
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.2",
    "husky": "^8.0.3",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.6.0",
    "wrangler": "^3.93.0"
  }
}
